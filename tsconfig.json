{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true
  },
  "references": [
    {
      "path": "./frontend/tsconfig.json"
    },
    {
      "path": "./backend/tsconfig.json"
    }
  ],
  "vueCompilerOptions": {
    "plugins": ["@vue/language-plugin-pug"]
  }
}
